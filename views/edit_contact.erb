<h1>Edit a Contact</h1>

<form action="/contacts/<%= @contact.id %>" method="post" class="edit_delete">
	<p>First Name: </p>
	<input type="hidden" name="_method" value="put" />
	<input type="text" name="first_name" value="<%= @contact.first_name %>" />
	<p>Last Name: </p>
	<input type="text" name="last_name" value="<%= @contact.last_name %>" />
	<p>E-mail: </p>
	<input type="text" name="email" value="<%= @contact.email %>" />
	<p>Note: </p>
	<input type="text" name="note" value="<%= @contact.note %>" class="note"></textarea>
	<br></br>
	<p></p>
	<input type="submit" name="submit" value="Make Edits" />
</form>